<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:padding="40dp"
        android:background="@color/brown"
        tools:context=".AmericanoFragment">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonReturn4"
            android:layout_width="76dp"
            android:layout_height="76dp"
            tools:ignore="MissingConstraints" />
        <ImageView
            android:id="@+id/imageAmerican"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:scaleType="centerCrop"
            android:src="@drawable/was"
            app:layout_constraintBottom_toTopOf="@+id/textName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.cardview.widget.CardView
            android:layout_width="76dp"
            android:layout_height="76dp"
            tools:layout_editor_absoluteY="-4dp"
            tools:layout_editor_absoluteX="250dp"
            app:cardCornerRadius="34dp"
            tools:ignore="MissingConstraints">
            <ImageView android:layout_width="76dp"
                android:scaleType="centerCrop"
                android:layout_height="76dp"
                tools:layout_editor_absoluteY="-4dp"
                android:src="@drawable/qas2"
                tools:layout_editor_absoluteX="250dp"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textName"
            android:layout_width="147dp"
            android:layout_height="39dp"
            android:layout_marginTop="16dp"
            android:text="Американо"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.182"
            app:layout_constraintStart_toEndOf="@+id/imageAmerican"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/textComposition"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="Состав: Эспрессо, разбавленный горячей водой."
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textName" />


        <TextView
            android:id="@+id/textPortionSize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Размер порции: Обычно 240 мл."
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textComposition" />

        <TextView
            android:id="@+id/textTaste"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Вкус: Легкий и более разбавленный по сравнению с эспрессо."
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textPortionSize"
            app:layout_constraintVertical_bias="1.0"
            android:layout_marginTop="8dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>